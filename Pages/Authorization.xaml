
    <Page x:Class="TurAgency.pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TurAgency.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization" Background="WhiteSmoke">

    <Grid>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10" FontSize="20" FontWeight="Bold" >Authorization</TextBlock>
            <TextBlock FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,10"> Login</TextBlock>
            <TextBox Margin="0,0,0,10" Name="Login"></TextBox>
            <TextBlock FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,10">Password</TextBlock>
            <TextBox Margin="0,0,0,10" Name="Password"></TextBox>
            <Button Click="Authorize" BorderBrush="White" Foreground="Black" Background="White" FontSize="20">Enter</Button>
        </StackPanel>
    </Grid>
</Page>
